@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model TicketManagement.Presentation.Models.AreaViewModel
<div>
    <dl class="dl-horizontal">
        <dt>@Localizer["CoordinateX"]</dt>
        <dd>
            @Html.DisplayFor(model => model.CoordX)
        </dd>
        <dt>@Localizer["CoordinateY"]</dt>
        <dd>
            @Html.DisplayFor(model => model.CoordY)
        </dd>
        <dt>@Localizer["Description"]</dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>@Localizer["Layout"]</dt>
        <dd>
            @Html.DisplayFor(model => model.LayoutName)
        </dd>
    </dl>

    <div>
        <form asp-controller="Area" asp-action="Delete" method="post">
            <div>
                <input class="btn btn-dark" type="submit" value="@Localizer["Delete"]" />
            </div>
        </form>
    </div>
</div>