@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model TicketManagement.Presentation.Models.SeatViewModel
<div>
    <dl class="dl-horizontal">
        <dt>@Localizer["AreaCoordinateX"]</dt>
        <dd>
            @Html.DisplayFor(model => model.AreaX)
        </dd>
        <dt>@Localizer["AreaCoordinateY"]</dt>
        <dd>
            @Html.DisplayFor(model => model.AreaY)
        </dd>
        <dt>@Localizer["Row"]</dt>
        <dd>
            @Html.DisplayFor(model => model.Row)
        </dd>
        <dt>@Localizer["Place"]</dt>
        <dd>
            @Html.DisplayFor(model => model.Number)
        </dd>
    </dl>

    <div>
        <form asp-controller="Seat" asp-action="Delete" method="post">
            <div>
                <input class="btn btn-outline-danger" type="submit" value="@Localizer["Delete"]" />
            </div>
        </form>
    </div>
</div>