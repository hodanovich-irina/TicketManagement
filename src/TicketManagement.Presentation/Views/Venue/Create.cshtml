@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model TicketManagement.Presentation.Dto.VenueDto

<form asp-action="create" asp-controller="venue">
    <div>
        <label asp-for="Name">@Localizer["Name"]</label>
        <input type="text" asp-for="Name" required maxlength="100" />
    </div>
    <div>
        <label asp-for="Description">@Localizer["Description"]</label>
        <input type="text" asp-for="Description" required maxlength="250"/>
    </div>
    <div>
        <label asp-for="Address">@Localizer["Address"]</label>
        <input type="text" asp-for="Address" required maxlength="200"/>
    </div>
    <div>
        <label asp-for="Phone">@Localizer["Phone"]</label>
        <input type="text" asp-for="Phone" required maxlength="20"/>
    </div>
    <div>
        <input class="btn btn-dark" type="submit" value="@Localizer["Add"]" />
    </div>
</form>
