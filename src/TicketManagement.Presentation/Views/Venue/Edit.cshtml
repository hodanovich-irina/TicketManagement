@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model TicketManagement.Presentation.Dto.VenueDto

<form asp-action="edit" asp-controller="venue" asp-route-id="@Model.Id">

    <div style="display:none;">
        <label asp-for="Id" class="control-label"></label>
        <input type="number" asp-for="Id" value="@Model.Id" />
    </div>
    <div>
        <label asp-for="Name" class="control-label">@Localizer["Name"]</label>
        <input type="text" asp-for="Name" required maxlength="100"/>
    </div>
    <div>
        <label asp-for="Description" class="control-label">@Localizer["Description"]</label>
        <input type="text" asp-for="Description" required maxlength="250"/>
    </div>
    <div>
        <label asp-for="Phone" class="control-label">@Localizer["Phone"]</label>
        <input type="text" asp-for="Phone" required maxlength="20"/>
    </div>
    <div>
        <label asp-for="Address" class="control-label">@Localizer["Address"]</label>
        <input type="text" asp-for="Address" required maxlength="200"/>
    </div>
    <div>
        <input type="submit" value="@Localizer["Change"]" class="btn btn-dark"/>
    </div>
</form>
