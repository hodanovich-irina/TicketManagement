@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model TicketManagement.Presentation.IdentityData.Login
<h2>@Localizer["ApplicationLogin"]</h2>
<form method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email">@Localizer["Email"]</label><br />
        <input asp-for="Email" required/>
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password">@Localizer["Password"]</label><br />
        <input asp-for="Password"/>
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="RememberMe">@Localizer["Remember"]</label><br />
        <input class="remember" asp-for="RememberMe" />
    </div>
    <div>
        <input class="btn btn-dark" value="@Localizer["Come"]" type="submit" />
    </div>
</form>
